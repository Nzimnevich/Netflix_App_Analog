<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView
                    android:id="@+id/foto_first_circleV"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/mini_margin"
                    android:layout_marginTop="@dimen/mini_margin"
                    android:src="@drawable/iv_mamoa"
                    />

            <TextView
                    android:id="@+id/first_name_actor_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/foto_first_circleV"
                    android:layout_marginLeft="20dp"
                    android:text="@string/name_first_actor"
                    android:textColor="@color/white" />
</LinearLayout>